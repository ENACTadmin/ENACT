<script src="/js/menu1.js"></script>
<script>
    AOS.init();
</script>

<header class="header">
    <div class="header__content header__content--fluid-width">
        <a class="header__logo-title" href="/">ENACT</a>
        <nav class="header__menu">
            <ul>
                <li>
                    <a class="header-link" id="header-link" href="/" data-aos="fade-left">HOME</a>
                </li>
                <li>
                    <% if (loggedIn) { %>
                        <a class="header-link" id="header-link" href="#" data-aos="fade-left">Courses</a>
                        <ul class="sub-menu">
                            <li>
                                <% if (locals.status === "admin" || locals.status === "faculty") { %>
                                    <a class="header-link" href="/createCourse">Create a course</a>
                                <% } %>
                            </li>
                            <li>
                                <a class="header-link" href="/joinACourse">Join a course</a>
                            </li>
                        </ul>
                    <% } else { %>
                    <% } %>
                </li>

                <% if (loggedIn) { %>
                    <li>
                        <a class="header-link" id="header-link" href="#" data-aos="fade-left">Settings</a>
                        <ul class="sub-menu">
                            <li>
                                <a class="header-link" href="/myProfile">View/edit profile</a>
                            </li>
                            <li>
                                <% if (locals.status === "admin") { %>
                                    <a class="header-link" href="/showAllProfiles">View all profiles</a>
                                <% } %>
                            </li>
                            <li>
                                <% if (locals.status === "admin") { %>
                                    <a class="header-link" href="/assignFaculty">Set up a new faculty</a>
                                <% } %>
                            </li>
                        </ul>
                    </li>
                <% } else { %>
                <% } %>

                <li class="header__btn header__btn--login">
                    <% if (!loggedIn) { %>
                        <a class="btn btn-outline-dark" href="/auth/google" data-aos="fade-left">Login with Google</a>
                    <% } else { %>
                        <a class="btn btn-outline-dark" href="/logout" data-aos="fade-left">Logout</a>
                    <% } %>
                </li>
            </ul>
        </nav>
    </div>
</header>