<%- include('../../components/header'); -%>
<script src='/js/navbar.js'></script>

<script>
    AOS.init();
</script>

<header class='header'>
    <div class='header__content header__content--fluid-width'>
        <a class='header__logo-title' href='/'>
            <div class='card-body' style='background-color: transparent'>
                <div class='card-text'>
                    <img style='height: 70px; width: 70px'
                         src='https://www.brandeis.edu/ethics/images/enact/enactlogo.jpg'>
                </div>
            </div>
        </a>
        <nav class='header__menu'>
            <ul>
                <li>
                    <a class='header-link' id='header-link' href='/' data-aos='fade-left'>HOME</a>
                </li>
                <li class='header__btn header__btn--login'>
                    <% if (!loggedIn) { %>
                        <a class='btn btn-outline-dark' href='/login' data-aos='fade-left'>Login</a>
                    <% } else { %>
                        <a class='btn btn-outline-dark' href='/logout' data-aos='fade-left'>Logout</a>
                    <% } %>
                </li>
            </ul>
        </nav>
    </div>
</header>

<section class='section'>
    <div class='section__content section__content--full-width'>
        <div class='jumbotron masthead text-center'>
            <div class='section__title section__title--centered'>
                Identity Verification
            </div>
        </div>
    </div>
</section>

<section class='section section__grey' data-aos='fade-up'>
    <div class='container'>
        <div class='row'>
            <div class='col-md-3 col-sm-12'></div>
            <div class='col-md-6 col-sm-12'>
                <form method='post' action='/verification'>
                    <div class='input-group-prepend'>
                        <span class='input-group-text' style='width: 180px'>Secret code :)</span>
                        <input type='text' class='form-control' style='margin-right: 10px' name='coursePin'
                               placeholder='e.g. 7-digit number'>
                        <input type='submit' name='submit' class='btn btn-outline-dark' value='Verify'>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<%- include('../../components/footer'); -%>
