<%- include('../../components/header'); -%>
<%- include('../../components/navbar'); -%>

<section class='section section__grey' data-aos='fade-up' style="height: 140%; padding-top: 8%">
    <div class="container" >
        <div class="row" >
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto" >
                <div class="card card-signin my-5">
                    <div class="card-body">
                        <% if (secret === 'general') { %>
                            <h5 class="card-title text-center">Log In</h5>
                        <% } else if (secret === 'redirect') { %>
                            <h5 class="card-title text-center">To View Messages, please Sign In / Sign up</h5>
                        <% } %>
                        <form class="form-signin"
                        <% if (secret === 'general') { %>
                              action="/login"
                        <% } else if (secret === 'redirect') { %>
                              action="/login/messages/view/<%= req.params.sender %>/<%= req.params.receiver %>/<%= req.params.resourceId %>"
                                <% } %>
                              method="post">
                            <div class="form-label-group">
                                <input display="none" type="text" name="email" id="Username" class="form-control"
                                       placeholder="Username"
                                       required autofocus>
                                <label for="Username">Email</label>
                            </div>

                            <div class="form-label-group">
                                <input type="password" name="password" id="inputPassword" class="form-control"
                                       placeholder="Password"
                                       required>
                                <label for="inputPassword">Password</label>
                            </div>
                            Forgot Password? <a href="/reset">Click here to recover account</a>
                            <br>
                            <br>

                            <input name="submit" class="btn btn-lg btn-primary btn-block text-uppercase" value="sign in"
                                   type="submit">

                            <h5 class="text-center">Or</h5>
                            <% if (secret === 'general') { %>
                                <a href="/auth/google" class="btn btn-lg btn-warning btn-block text-uppercase"><i
                                            class="fa fa-google mr-2"></i> Sign in with Google
                                </a>
                            <% } else if (secret === 'redirect') { %>
                                <a href="/auth/google/messages"
                                   class="btn btn-lg btn-warning btn-block text-uppercase"><i
                                            class="fa fa-google mr-2"></i> Sign in with Google
                                </a>
                            <% } %>
                            <hr class="my-4">
                            <h5 class="card-title text-center">Sign Up</h5>
                            <p class="text-center" style="margin-bottom:1rem;">New ENACT members create a new account below </p>

                            <a href="/signup"
                               class="btn btn-lg btn-primary btn-block text-uppercase"> Sign Up
                            </a>
                            <br>

                            <p class="text-center" style="margin-bottom:1rem;"> Need Help? Look at our onboarding video</p>
                            <video style="width: 100%" poster="/images/accountCreation.webp" controls>
                                <source src="https://enact-resources.s3.us-east-2.amazonaws.com/Create+an+Account+and+Profile+(with+captions).mp4" type="video/mp4">
                            </video>

                           <div style="width:100%; display:flex; justify-content:center;"> <a href="/accountHelp" >Account Help Video Link</a></div>
                           
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('../../components/footer'); -%>
