<%- include('../components/header'); -%>
<%- include('../components/navbar'); -%>

<section class='section section--grey'>
    <div class='section__content section__content--full-width'>
        <div class='jumbotron masthead text-center'>
            <div class='section__title section__title--centered'>
                <% if (messageInfo.length > 0 && messageInfo[0].subject) { %>
                    <%= messageInfo[0].subject %>
                <% } else { %>
                    Messages between <%= senderInfo.userName %> & <%= receiverInfo.userName %>
                <% } %>
            </div>
            <h3>Leave a post here and the recipient will receive an email notification <u>with your email hidden</u>
            </h3>
        </div>
    </div>
</section>

<section class='section section__grey'>
    <div class='container'>
        <div class='row'>
            <div class='col'>
                <% if (resourceInfo) { %>
                    <h3>Relevant resource</h3>
                    <hr>
                    <div class='card-body'>
                        <h4><%= resourceInfo.name %></h4>
                        <div class='card-text'>
                            <ul class='list-group'>
                                <li class='list-group-item borderless box-padding'>
                                    <b>Description: </b> <%= resourceInfo.description %></li>
                                <li class='list-group-item borderless box-padding'>
                                    <b>State:</b> <%= resourceInfo.state %></li>
                                <li class='list-group-item borderless box-padding'>
                                    <b>Link: </b> <a href='<%= resourceInfo.uri %>'>click me</a>
                                </li>
                                <li class='list-group-item borderless box-padding'>
                                    <b>Institution: </b> <%= resourceInfo.institution %></li>
                                <li class='list-group-item borderless box-padding'>
                                    <b>Tags:</b> <%= resourceInfo.tags %>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <br>
                <% } %>
                <h3>Messages</h3>
                <hr>
                <% for (let i = 0; i < messageInfo.length; i++) { %>
                    <div class='media mb-3' id='description'>
                        <a href='/profile/view/<%= messageInfo[i].sentBy %>'>
                            <% if (messageInfo[i].sentBy.equals(senderInfo._id)) { %>
                                <img class='d-flex mr-3 rounded-circle'
                                     id='profilePic'
                                     src='
                                     <% if (senderInfo.profilePicURL) { %>
                                        <%= senderInfo.profilePicURL %>
                                     <% } else { %>
                                         https://moonvillageassociation.org/wp-content/uploads/2018/06/default-profile-picture1.jpg
                                     <% } %>
                                     '
                                     width='40px' height='40px'
                                     alt='user profile pic'>
                            <% } else { %>
                                <img class='d-flex mr-3 rounded-circle'
                                     id='profilePic'
                                     src='
                                     <% if (receiverInfo.profilePicURL) { %>
                                        <%= receiverInfo.profilePicURL %>
                                     <% } else { %>
                                        data:image/png;base64,
                                     <% } %>
                                     '
                                     width='40px' height='40px'
                                     alt='user profile pic'>
                            <% } %>
                        </a>
                        <div class='media-body align-self-center'>
                            <h6><%= messageInfo[i].message %></h6>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</section>


<section class='section section__grey'>
    <div class='container'>
        <div class='row'>
            <div class='col'>
                <!-- Comments Form -->
                <div class='card'>
                    <h5 class='card-header'>Leave a message here:</h5>
                    <div class='card-body'>
                        <form action='/messages/save/<%= senderInfo._id %>/<%= receiverInfo._id %>/general'
                              method='post'>
                            <% if (messageInfo.length === 0) { %>
                                <div class='input-group-prepend' style='display: inline'>
                                    Subject
                                    <input type='text' class='form-control' name='subject'>
                                </div>
                                <br>
                            <% } %>
                            <div class='form-group' style='display: inline'>
                                Message
                                <textarea style='resize: none' class='form-control' name='message' rows='3'></textarea>
                            </div>
                            <br>
                            <% if (loggedIn) { %>
                                <button type='submit' class='btn btn-outline-primary'>Send</button>
                            <% } else { %>
                                Please login to submit.
                            <% } %>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class='section section__grey'>
    <% if (loggedIn) { %>
        <div class='container'>
            <a href='/messages/view/all'><input class='btn btn-outline-primary' type='button'
                                                value='Return to Messages'></a>
        </div>
    <% } %>
</section>

<%- include('../components/footer'); -%>
