<%- include('../components/header'); -%>

<script src="/js/menu.js"></script>
<script>
    AOS.init();
</script>

<header class="header">
    <div class="header__content header__content--fluid-width">
        <a class="header__logo-title" href="/">
            <div class="card-body" style="background-color: transparent">
                <div class="card-text">
                    <img style="height: 70px; width: 70px"
                         src="https://www.brandeis.edu/ethics/images/enact/enactlogo.jpg">
                </div>
            </div>
        </a>
        <a class="header__logo-title-1" style="margin-left: -10px" href="/">
            <b>THE EDUCATIONAL NETWORK
                <br>
                FOR ACTIVE CIVIC TRANSFORMATION</b>
        </a>
        <nav class="header__menu">
            <ul>
                <li>
                    <a class="header-link" id="header-link" href="/" data-aos="fade-left">HOME</a>
                </li>
                <li>
                    <% if (loggedIn) { %>
                        <a class="header-link" id="header-link" href="#" data-aos="fade-left">My Courses</a>
                        <ul class="sub-menu">
                            <% for (let i = 0; i < courseInfoSet.length; i++) { %>
                                <li>
                                    <a class="header-link"
                                       href="/showOneCourse/<%= courseInfoSet[i]._id %>"><%= courseInfoSet[i].courseName %></a>
                                </li>
                            <% } %>
                        </ul>
                    <% } else { %>
                    <% } %>
                </li>
                <li>
                    <% if (loggedIn) { %>
                        <a class="header-link" id="header-link" href="#" data-aos="fade-left">Resources</a>
                        <ul class="sub-menu">
                            <li>
                                <a class="header-link" href="/primarySearch">Find some resources</a>
                            </li>
                        </ul>
                    <% } else { %>
                    <% } %>
                </li>
                <li>
                    <% if (loggedIn) { %>
                    <a class="header-link" id="header-link" href="#" data-aos="fade-left">Notifications</a>
                    <ul class="sub-menu">
                        <li>
                            <% if (status === "faculty" ||status === "admin") { %>
                            <a class="header-link" href="/reviewResource">Resources under review</a>
                            <% } %>
                        </li>
                    </ul>
                    <% } else { %>
                    <% } %>
                </li>

                <% if (loggedIn) { %>
                    <li>
                        <a class="header-link" id="header-link" href="#" data-aos="fade-left">Settings</a>
                        <ul class="sub-menu">
                            <li>
                                <a class="header-link" href="/myProfile">View/edit profile</a>
                            </li>
                            <li>
                                <% if (status === "admin") { %>
                                    <a class="header-link" href="/showAllProfiles">View all profiles</a>
                                <% } %>
                            </li>
                            <li>
                                <% if (status === "admin") { %>
                                    <a class="header-link" href="/assignFaculty">Set up a new faculty</a>
                                <% } %>
                            </li>
                        </ul>
                    </li>
                <% } else { %>
                <% } %>


                <li class="header__btn header__btn--login">
                    <% if (!loggedIn) { %>
                        <a class="btn btn-outline-dark" href="/auth/google" data-aos="fade-left">ENACT member login</a>
                    <% } else { %>
                        <a class="btn btn-outline-dark" href="/logout" data-aos="fade-left">Logout</a>
                    <% } %>
                </li>
            </ul>
        </nav>
    </div>
</header>

<!-- Section intro -->
<section class="section section--intro section__grey" id="home">
    <div class="section__content section__content--full-width">
        <div class="intro">
            <div class="intro__content">
                <% if (loggedIn) { %>
                    <div class="intro__subtitle" style="color: black;">Dear <%= status %>, <b><%= user.googlename %></b>
                    </div>
                <% } %>
                <div class="intro__subtitle" style="color: black;">Welcome to ENACT Digital platform!</div>
                <% if (loggedIn) { %>
                    <% if (status === 'admin' || status === 'faculty') { %>
                        <div class="form-demo" data-aos="fade-up">
                            <a href="/showCourses"><input type="submit" name="submit" class="form-demo__submit"
                                                          value="MANAGE or CREATE COURSES"></a>
                        </div>
                    <% } else { %>
                        <div class="form-demo" data-aos="fade-up">
                            <a href="/showCourses"><input type="submit" name="submit" class="form-demo__submit"
                                                          value="MANAGE or ENROLL IN COURSES"></a>
                        </div>
                    <% } %>
                    <br>
                    <div class="form-demo" data-aos="fade-up" data-aos-delay="100">
                        <a href="/primarySearch"><input type="submit" name="submit" class="form-demo__submit"
                                                 value="FIND RESOURCES"></a>
                    </div>
                    <br>

                    <% if (status === 'faculty' || status === 'admin') { %>
                        <div class="form-demo" data-aos="fade-up" data-aos-delay="200">
                            <a href="/facultyExclusive"><input type="submit" name="submit" class="form-demo__submit"
                                                               value="FACULTY EXCLUSIVE"></a>
                        </div>
                    <% } %>
                <% } else { %>
                    <h2>IF YOU ARE AN<b style="color: #0253a4"> ENACT PROGRAM MEMBER, PLEASE LOGIN</b></h2>
                    <br>
                    <a href="/auth/google"><input type="submit" name="submit" class="form-demo__submit"
                                                  value="ENACT MEMBER LOGIN"></a>
                <% } %>
            </div>
        </div>
    </div>
</section>

