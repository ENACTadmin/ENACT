<!-- Section -->
<section class="section diagonal-gradient">
    <div class="section__content section__content--fluid-width section__content--padding">
        <h2 class="section__title section__title--centered" style="color: white">Most Recently Uploaded</h2>
        <br><br><br>
        <% for (let i = 0; i < publicRc.length; i++) { %>
            <div class="card blogBox moreBox" data-aos="fade-up">
                <div class="card-body">
                    <h4>
                        Name: <%= publicRc[i].name %>
                    </h4>
                    <div class="card-text">
                        <ul class="list-group">
                            <li class="list-group-item borderless box-padding">
                                <b>Description: </b>
                                <%= publicRc[i].description %>
                            </li>
                            <li class="list-group-item borderless box-padding">
                                <b>State:</b>
                                <%= publicRc[i].state %>
                            </li>
                            <li class="list-group-item borderless box-padding">
                                <b>Link: </b>
                                <a href="<%= publicRc[i].uri %>"><%= publicRc[i].uri %></a>
                            </li>
                            <li class="list-group-item borderless box-padding">
                                <b>Institution: </b>
                                <%= publicRc[i].institution %>
                            </li>
                            <li class="list-group-item borderless box-padding">
                                <b>Categories:</b>
                                <%= publicRc[i].tags %>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <br>
        <% } %>

        <br>
        <br>
        <% if (status === 'admin') { %>
            <div class="text-center">
                <a href="/uploadToPublic" class="btn-lg btn-primary">Manage</a>
            </div>
        <% } %>
        <br>
        <div class="clear"></div>
    </div>
</section>


<%- include('../components/footer'); -%>