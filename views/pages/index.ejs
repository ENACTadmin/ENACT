<script>
    $(document).ready(function () {
            $(".TZChange").each(function () {
                let oldDate = $(this).text()
                let newDate = new Date(oldDate)
                $(this).text(newDate.toLocaleDateString())
            })
            $(".TZChange1").each(function () {
                let today = new Date()
                let oldDate = $(this).text()
                let newDate = new Date(oldDate + today.getTimezoneOffset())
                let minutes = newDate.getMinutes()
                let hours = newDate.getHours()
                if (minutes.toString().length === 1)
                    minutes = '0' + minutes.toString()
                if (hours.toString().length === 1)
                    hours = '0' + hours.toString()
                $(this).text(hours + ':' + minutes)
            })
            $("#scrollToPlace1").click(function () {
                $('html,body').animate({scrollTop: ($("#place1").offset().top - 40)}, 'slow');
            });
            $("#scrollToPlace2").click(function () {
                $('html,body').animate({scrollTop: ($("#place2").offset().top - 40)}, 'slow');
            });
            $("#scrollToPlace3").click(function () {
                $('html,body').animate({scrollTop: (0)}, 'slow');
            });
            $("#scrollToPlace4").click(function () {
                $('html,body').animate({scrollTop: ($("#place4").offset().top - 40)}, 'slow');
            });
        }
    )
</script>

