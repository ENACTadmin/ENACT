                    <div class='card border-0' style='border-radius: 30px' data-aos='fade-up'>
                        <div class='shadow-sm card-body'>
                            <h3><%= eventsInfo[i].title %></h3>
                            <div class='card-text'>
                                <ul class='list-group'>
                                    <li class='list-group-item borderless box-padding bg-transparent' style="font-size: large">
                                        <div class="row">
                                            <div class="col-md-9 col-sm-12" style="display: inline">
                                                <h5 style="display: inline; font-weight: 650">Description:</h5>
                                                <%= eventsInfo[i].description %>
                                            </div>
                                            <div class="col-md-3 col-sm-12 align-self-center"><img
                                                <% if (!eventsInfo[i].imageURL) { %>
                                                    src="https://www.brandeis.edu/ethics/images/enact/enactlogo.jpg"
                                                <% } else { %>
                                                    src="<%= eventsInfo[i].imageURL %>"
                                                        <% } %>
                                                    style="height: auto; max-width: 100%"></div>
                                        </div>
                                    </li>
                                    <% if (eventsInfo[i].start !== null && eventsInfo[i].end !== null) { %>
                                        <li class='list-group-item borderless box-padding bg-transparent' style="font-size: large">
                                            <h5 style="display: inline; font-weight: 650">Date: </h5>
                                            <p style="display: inline"
                                               class="TZChange"><%= eventsInfo[i].start %></p>
                                        </li>
                                        <li class='list-group-item borderless box-padding bg-transparent' style="font-size: large">
                                            <h5 style="display: inline; font-weight: 650">Start time: </h5>
                                            <p style="display: inline;"
                                               class="TZChange1"><%= eventsInfo[i].start %></p>
                                        </li>
                                        <li class='list-group-item borderless box-padding bg-transparent' style="font-size: large">
                                            <h5 style="display: inline; font-weight: 650">End time: </h5>
                                            <p style="display: inline;"
                                               class="TZChange1"><%= eventsInfo[i].end %></p>
                                        </li>
                                    <% } %>
                                    <% if (eventsInfo[i].uri !== null) { %>
                                        <li class='list-group-item borderless box-padding bg-transparent' style="font-size: large">
                                            <h5 style="display: inline; font-weight: 650">Link:</h5> <a
                                                    href="<%= eventsInfo[i].uri %>">click me</a>
                                        </li>
                                    <% } %>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <% if (i !== eventsInfo.length - 1) { %>
                        <br>
                    <% } %>
                <% } %>
            <% } %>
        <% } else { %>
            <div class='shadow-sm card-body text-center' style="border-radius: 30px">
                <h4>No events available yet</h4>
            </div>
        <% } %>
        <br><br><br>
        <div class='text-center' data-aos='fade-up' style="padding-bottom: 80px" data-aos-delay="100">
            <a href='/events'><input type='button' name='submit'
                                     class='btn btn-lg btn-primary'
                                     value='View more events'></a>
