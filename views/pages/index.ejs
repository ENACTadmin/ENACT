<%- include('../components/header'); -%>

<script src='/js/menu1.js'></script>

<script>
    AOS.init();
</script>

<header class='header header--sticky'>
    <div class='header__content header__content--fluid-width'>
        <a class='header__logo-title' href='/'>
            <div class='card-body' style='background-color: transparent'>
                <div class='card-text'>
                    <img style='height: 70px; width: 70px'
                         src='https://www.brandeis.edu/ethics/images/enact/enactlogo.jpg' alt="ENACT logo">
                </div>
            </div>
        </a>
        <% if (!loggedIn) { %>
            <a class='header__logo-title-1' style='margin-left: -10px' href='/'>
                <b>THE EDUCATIONAL NETWORK<br>FOR ACTIVE CIVIC TRANSFORMATION</b>
            </a>
        <% } %>
        <%- include('../components/navbar-common'); -%>
    </div>
</header>

<!-- Front intro -->
<section class='section section--intro section__grey' data-aos='fade-down' data-aos-duration='600'>
    <div class='section__content section__content--full-width' style='font-weight: 750;'>
        <div class='intro'>
            <div class='intro__content'>
                <div class='intro__description' style='color: black'>
                    <b style='color: #007BFF'>ENACT: Educational Network for Active Civic Transformation</b> is a
                    national, non-partisan program engaging undergraduates at colleges and universities in
                    state-level legislative change.
                    <% if (!loggedIn) { %>
                        <a href="https://go.brandeis.edu/ENACT" class="btn btn-sm btn-info" id="adjustedLoginBtn">More About ENACT</a>
                    <% } %>
                    <br>
                    <b style="color: limegreen">- ENACT Students & Alumni:</b> search student work. Network with
                    students and alumni.
                    <% if (!loggedIn) { %>
                        <a href="/login" class="btn btn-sm btn-info" id="adjustedLoginBtn">Click to Login</a>
                    <% } %>
                    <br>
                    <b style="color: limegreen">- ENACT Faculty Fellows:</b> access ENACT teaching resources and
                    student work.
                    <% if (!loggedIn) { %>
                        <a href="/login" class="btn btn-sm btn-info" id="adjustedLoginBtn">Click to Login</a>
                    <% } %>
                    <br>
                    <b style="color: limegreen">- Public:</b> access student work on bills from across the U.S.,
                    including op-eds, issue research and more.
                </div>
                <div class='form-demo'>
                    <% if (loggedIn) { %>
                        <% if (status === 'admin' || status === 'faculty') { %>
                            <a href='/courses'><input type='submit' name='submit' class='form-demo__large'
                                                      value='COURSES &#x1f4d6;'></a>
                            <a href='/resources/search/private/advanced'><input type='submit' name='submit'
                                                                                class='form-demo__large'
                                                                                value='SEARCH &#128269;'></a>
                            <a href='/resources/view/faculty'><input type='submit' name='submit'
                                                                     class='form-demo__large'
                                                                     value='FACULTY GUIDE'></a>
                        <% } else { %>
                            <a href='/resources/search/private/advanced'><input type='submit' name='submit'
                                                                                class='form-demo__large'
                                                                                value='SEARCH &#128269;'></a>
                            <a href='/profiles/view/all'><input type='submit' name='submit'
                                                                class='form-demo__large'
                                                                value='NETWORKING'></a>

                        <% } %>
                        <!--                    public user-->
                    <% } else { %>
                        <a href='/resources/view/my/public/all'><input type='submit' name='submit'
                                                                       class='form-demo__large'
                                                                       value='SEARCH RESOURCES &#128269;'></a>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- ENACT Program intro -->
<section class='section section__grey'>
    <br><br><br>
    <h2 class='section__title section__title--centered'>Who we are & What you can do</h2>
    <br>
    <div class='section__content section__content--fluid-width section__content--padding--small'>
        <div class='grid grid--3col'>
            <div class='grid__item partners__slide__grey' data-aos='fade-up' style="height: 550px">
                <a href="/about"><h2 class='grid__title'><span>Who we are <span style="color: black">&#9756;</span> Click me</span>
                    </h2></a>
                <img style='height: 200px; width: 200px; padding: 20px' align="right"
                     src='https://www.brandeis.edu/ethics/images/enact/enactlogo.jpg' alt="ENACT logo">
                <p class='grid__text' style="font-size: larger; line-height: 150%;">
                    <b>ENACT is a national, non-partisan program</b> engaging undergraduates at colleges and
                    universities in
                    state-level legislative change.
                    <a href="https://go.brandeis.edu/ENACT">More about ENACT</a>
                    <br>
                    <b>- ENACT Students & Alumni:</b> search ENACT student assignments and connect with students and
                    alumni across the United States.
                    <br>
                    <b>- ENACT Faculty Fellows:</b> access ENACT syllabi, teaching resources, and student work.
                    <br>
                    <b>- Public:</b> access student work on bills from across teh country, including op-eds, issue
                    research and more.
                </p>

            </div>
            <div class='grid__item partners__slide__grey' data-aos='fade-up' style="height: 550px">
                <% if (loggedIn) { %>
                    <a href="/resources/search/private/advanced"><h2 class='grid__title'><span>Search <span
                                        style="color: black">&#9756;</span> Click me</span>
                        </h2></a>
                    <a href="/resources/search/private/advanced"><img src="/images/search.jpg" style="height: 220px"
                                                                      align="right"></a>
                <% } else { %>
                    <a href="/resources/search/public/advanced"><h2 class='grid__title'><span>Search <span
                                        style="color: black">&#9756;</span> Click me</span>
                        </h2></a>
                    <a href='/resources/search/public/advanced'><img src="/images/search.jpg" style="height: 220px"
                                                                     align="right"></a>
                <% } %>
                <p class='grid__text' style="font-size: larger; line-height: 175%">
                    Powered by our advanced searching algorithm, you can find any resources ranging from student
                    research reports to fact sheets or elevator speeches, etc., with a few simple clicks. These
                    resources can be useful for your coursework, academic publications or professional work.
                    <br><br>
                </p>
            </div>
            <div class='grid__item partners__slide__grey' style="height: 550px" data-aos='fade-up'>
                <% if (loggedIn) { %>
                    <a href="/profiles/view/all"><h2 class='grid__title'><span>Networking <span
                                        style="color: black"><span
                                            style="color: black">&#9756;</span></span> Click me</span></h2></a>
                    <a href="/profiles/view/all"><img src="/images/networking.jpg" style="height: 220px"
                                                      align="right"></a>
                <% } else { %>
                    <h2 class='grid__title'><span>Networking (<a href="/login">Click to Login to Use</a>) </span></h2>
                    <img src="/images/networking.jpg" style="height: 220px" align="right">
                <% } %>
                <p class='grid__text' style="font-size: larger; line-height: 175%">
                    The ENACT network connects over 50+ institutions in the U.S., which is still growing. With thousands
                    of alumni who are now working professionals in the U.S. legal system/industry, you can seek career
                    advice, reach out to experts, or even find career opportunities by connecting with them.
                    <br><br>
                </p>
            </div>
        </div>
        <div class='clear'></div>
    </div>
</section>

<!-- Public Resources Section -->
<section class='section diagonal-gradient'>
    <div class='section__content section__content--fluid-width section__content--padding' data-aos='fade-up'>
        <h2 class='section__title section__title--centered' style="color: white">Public resources</h2>
        <br><br><br>
        <% if (resourceInfo.length === 0) { %>
            <div class='card-body text-center' style="border-radius: 30px">
                <h4>No resource available yet</h4>
            </div>
        <% } %>
        <% for (let i = 0; i < resourceInfo.length && i < 3; i++) { %>
            <div class='card-body border-0' style='border-radius: 30px' data-aos='fade-up'>
                <h4>
                    <%= resourceInfo[i].name %>
                </h4>
                <div class='card-text'>
                    <ul class='list-group'>
                        <li class='list-group-item borderless box-padding'>
                            <b>Description: </b>
                            <%= resourceInfo[i].description %>
                        </li>
                        <li class='list-group-item borderless box-padding'>
                            <b>State:</b>
                            <%= resourceInfo[i].state %>
                        </li>
                        <li class='list-group-item borderless box-padding'>
                            <b>Link: </b>
                            <a href='<%= resourceInfo[i].uri %>'>Click me</a>
                        </li>
                        <li class='list-group-item borderless box-padding'>
                            <b>Institution: </b>
                            <%= resourceInfo[i].institution %>
                        </li>
                        <li class='list-group-item borderless box-padding'>
                            <b>Categories:</b>
                            <%= resourceInfo[i].tags %>
                        </li>
                    </ul>
                </div>
            </div>
            <br>
        <% } %>
        <br>
        <br>
        <% if (status === 'admin') { %>
            <div class='text-center' data-aos='fade-up' data-aos-delay="100">
                <a href='/managePublicResources'><input type='button' name='submit'
                                                        class='btn btn- btn-lg btn-light'
                                                        value='Manage Displayed Resources'></a>
            </div>
        <% } %>
        <br>
        <div class='text-center' data-aos='fade-up' data-aos-delay="100">
            <a href='/resources/view/my/public/all'><input type='button' name='submit'
                                                           class='btn btn-lg btn-light'
                                                           value='Find More Resources'></a>
        </div>
        <br>
        <div class='clear'></div>
    </div>
</section>


<!-- Calendar -->
<section class='section section__grey'>
    <h2 class='section__title section__title--centered' style="padding-top: 80px">Events</h2>
    <section class='section__content section__content--fluid-width'>
        <% if (eventsInfo.length !== 0) { %>
            <% for (let i = 0; i < eventsInfo.length; i++) { %>
                <% if (loggedIn || eventsInfo[i].visibility === 'public') { %>
                    <div class='card border-0' style='border-radius: 30px'>
                        <div class='card-body'>
                            <h3><%= eventsInfo[i].title %></h3>
                            <div class='card-text' style="font-size: 17px">
                                <ul class='list-group'>
                                    <li class='list-group-item borderless box-padding'>
                                        <b>Description: </b> <%= eventsInfo[i].description %>
                                    </li>
                                    <% if (eventsInfo[i].start !== null) { %>
                                        <li class='list-group-item borderless box-padding'>
                                            <b>Starts at:</b>
                                            <%= eventsInfo[i].start %>
                                        </li>
                                    <% } %>
                                    <% if (eventsInfo[i].end !== null) { %>
                                        <li class='list-group-item borderless box-padding'>
                                            <b>Ends at:</b>
                                            <%= eventsInfo[i].end %>
                                        </li>
                                    <% } %>
                                    <% if (eventsInfo[i].uri !== null) { %>
                                        <li class='list-group-item borderless box-padding'>
                                            <b>Link: </b> <a
                                                    href="<%= eventsInfo[i].uri %>"><%= eventsInfo[i].uri %></a>
                                        </li>
                                    <% } %>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <% if (i !== eventsInfo.length - 1) { %>
                        <br>
                    <% } %>
                <% } %>
            <% } %>
        <% } else { %>
            <div class='card-body text-center' style="border-radius: 30px">
                <h4>No events available yet</h4>
            </div>
        <% } %>
        <br><br><br>
        <div class='text-center' data-aos='fade-up' style="padding-bottom: 80px" data-aos-delay="100">
            <a href='/events'><input type='button' name='submit'
                                     class='btn btn-lg btn-primary'
                                     value='View more events'></a>
        </div>
    </section>
</section>

<!-- Join Us Section -->
<% if (!loggedIn) { %>
    <section class='section diagonal-gradient'>
        <br><br><br>
        <h2 class='section__title section__title--centered' style="color: white">Join Us</h2>
        <br>
        <div class='section__content section__content--fluid-width section__content--padding--small'>
            <div class='grid grid--2col'>
                <div class='grid__item partners__slide__grey' style="height: 450px" data-aos='fade-up'>
                    <h2 class='grid__title'><span>For Students</span></h2>
                    <p class='grid__text' style="font-size: larger; line-height: 175%">
                        • Are you a student in an ENACT course? Contact your professor for the PIN you need to login ,
                        create a profile. You will then be able to access all resources, and upload your own work.
                        Already have a profile? Login above to gain full access to the site.
                        <br><br>
                        • Are you an alum of an ENACT course? If you do not already have a profile, contact <a
                                href="mailto:enact@brandeis.edu">ENACT@brandeis.edu</a> to request a pin. Include the
                        year and school where you took the ENACT course.
                    </p>
                </div>
                <div class='grid__item partners__slide__grey' style="height: 450px" data-aos='fade-up'>
                    <h2 class='grid__title'><span>For Professors</span></h2>
                    <p class='grid__text' style="font-size: larger; line-height: 175%">
                        • Are you an ENACT Faculty Fellow? Login above to gain full access to the site.
                        <br><br>
                        • Are you interested in teaching an ENACT course? Contact <a href="mailto:enact@brandeis.edu">ENACT@brandeis.edu</a>.
                        <br><br>
                        • Are you an interested member of the public? Search publicly available resources created by
                        ENACT students from across the United States. You can browse, enter a keyword in the search box,
                        or search using any or all of the categories below. For example, search by content type, issue
                        area, state, and more.
                    </p>
                </div>
            </div>
            <div class='clear'></div>
        </div>
    </section>
<% } %>

