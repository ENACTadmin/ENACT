<%- include('../components/header'); -%>

<script src='/js/menu1.js'></script>

<script>
    AOS.init();
</script>

<header class='header header--sticky'>
    <div class='header__content header__content--fluid-width'>
        <a class='header__logo-title' href='/'>
            <div class='card-body' style='background-color: transparent'>
                <div class='card-text'>
                    <img style='height: 70px; width: 70px'
                         src='https://www.brandeis.edu/ethics/images/enact/enactlogo.jpg' alt="ENACT logo">
                </div>
            </div>
        </a>
        <% if (!loggedIn) { %>
            <a class='header__logo-title-1' style='margin-left: -10px' href='/'>
                <b>THE EDUCATIONAL NETWORK<br>FOR ACTIVE CIVIC TRANSFORMATION</b>
            </a>
        <% } %>
        <%- include('../components/navbar-common'); -%>
    </div>
</header>

<!-- Front intro -->
<section class='section section--intro section__grey' data-aos='fade-down' data-aos-duration='600'>
    <div class='section__content section__content--full-width' style='font-weight: 750;'>
        <div class='intro'>
            <div class='intro__content'>
                <div class='intro__description' style='color: black'>
                    <b style='color: #007BFF'>ENACT: Educational Network for Active Civic Transformation</b> is a
                    national, non-partisan program engaging undergraduates at colleges and universities in
                    state-level legislative change.
                    <% if (!loggedIn) { %>
                        <a href="https://go.brandeis.edu/ENACT" class="btn btn-sm btn-info" id="adjustedLoginBtn">More
                            About ENACT</a>
                    <% } %>
                    <br>
                    <b style="color: #FF9912">- ENACT Students & Alumni:</b> search student work. Network with
                    students and alumni.
                    <% if (!loggedIn) { %>
                        <a href="/login" class="btn btn-sm btn-info" id="adjustedLoginBtn">Click to Login</a>
                    <% } %>
                    <br>
                    <b style="color: #FF9912">- ENACT Faculty Fellows:</b> access ENACT teaching resources and
                    student work.
                    <% if (!loggedIn) { %>
                        <a href="/login" class="btn btn-sm btn-info" id="adjustedLoginBtn">Click to Login</a>
                    <% } %>
                    <br>
                    <b style="color: #FF9912">- Public:</b> access student work on bills from across the U.S.,
                    including op-eds, issue research and more.
                </div>
                <div class='form-demo'>
                    <% if (loggedIn) { %>
                        <% if (status === 'admin' || status === 'faculty') { %>
                            <a href='/courses'><input type='submit' name='submit' class='form-demo__large fa'
                                                      style="font-size: 24px; font-weight: 680"
                                                      value='Courses &#xf02d'></a>
                            <a href='/resources/search/private/advanced'><input type='submit' name='submit'
                                                                                class='form-demo__large fa'
                                                                                style="font-size: 24px; font-weight: 680"
                                                                                value='Search &#xf002'></a>
                            <a href='/resources/view/faculty'><input type='submit' name='submit'
                                                                     class='form-demo__large fa'
                                                                     style="font-size: 24px; font-weight: 680"
                                                                     value='Guide For Faculty &#xf14e'></a>
                        <% } else { %>
                            <a href='/resources/search/private/advanced'><input type='submit' name='submit'
                                                                                class='form-demo__large fa'
                                                                                style="font-size: 24px; font-weight: 680"
                                                                                value='Search &#xf002;'></a>
                            <a href='/networking'><input type='submit' name='submit'
                                                         class='form-demo__large fa'
                                                         style="font-size: 24px; font-weight: 680"
                                                         value="Networking &#xf08c;"></a>

                        <% } %>
                        <!--                    public user-->
                    <% } else { %>
                        <a href='/resources/view/my/public/all'><input type='submit' name='submit'
                                                                       class='form-demo__large fa'
                                                                       style="font-size: 24px; font-weight: 680"
                                                                       value='Search &#xf002'></a>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- ENACT Program intro -->
<section class='section section__grey'>
    <br><br><br>
    <h2 class='section__title section__title--centered'>Who we are & What you can do</h2>
    <br>
    <div class='section__content section__content--fluid-width section__content--padding--small'>
        <div class='grid grid--3col'>
            <div class='grid__item partners__slide__grey' style='min-height: 500px' data-aos='fade-up'>
                <h3 class='grid__title'><span>What We Do</span></h3>
                <p class='grid__text' style="font-size: large; line-height: 150%">
                    The <b style='color: #0053a4'>ENACT: Educational Network for Active Civic Transformation</b> is a
                    national program
                    engaging undergraduates at colleges and universities in state-level legislative change by
                    learning
                    to work with legislators, staffers, and community organizations to advance policy. It is
                    becoming a
                    major voice in addressing challenges to American democracy by engaging young people around
                    the
                    country in civic activism built on knowledge, cooperation, justice and integrity.</p>
                <br>
                <br>
            </div>

            <div class='grid__item partners__slide__grey' style='min-height: 500px' data-aos='fade-up'>
                <div id='carouselExampleSlidesOnly' class='carousel slide' data-ride='carousel'>
                    <div class='carousel-inner'>
                        <div class='carousel-item active'>
                            <img src='<%= imagePaths[0] %>'
                                 style='width: 100%; height: 480px; object-fit: contain;'
                                 class='d-block w-100' alt='...'>
                            <div class='carousel-caption d-none d-md-block'
                                 style='right: 1%; left: 1%; color: black; background-color: white; opacity: 0.95; border-radius: 15px; padding: 4%'>
                                <p style="font-size: large; line-height: 120%"><%= labelPaths[0] %></p>
                            </div>
                        </div>
                        <% for (let i = 1; i < imagePaths.length; i++) { %>
                            <div class='carousel-item'>
                                <img src='<%= imagePaths[i] %>'
                                     style='width: 100%; height: 480px; object-fit: contain;'
                                     class='d-block w-100' alt='...'>
                                <div class='carousel-caption d-none d-md-block'
                                     style='right: 1%; left: 1%; color: black; background-color: white; opacity: 0.95; border-radius: 15px; padding: 4%'>
                                    <p style="font-size: large; line-height: 120%"><%= labelPaths[i] %></p>
                                </div>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>

            <div class='grid__item partners__slide__grey' style='min-height: 500px' data-aos='fade-up'>
                <h3 class='grid__title'><span>The ENACT Model</span></h3>
                <p class='grid__text' style="font-size: large; line-height: 135%">
                    <b style='color: #0053a4'>• Workshop</b>: ENACT launched with a workshop at Brandeis University in
                    May 2016. Under the leadership of the program’s academic director, ENACT Fellows shared ideas and
                    work on course development.
                    <br>
                    <b style='color: #0053a4'>• Courses</b>: In ENACT courses students learn about participating in the
                    legislative and
                    advocacy process at the state level, with a substantial hands-on component in which they engage
                    directly in that process, as in the “Advocacy for Policy Change” course at Brandeis.
                    <!--                    See the full list of ENACT schools.-->
                    <br>
                    <b style='color: #0053a4'>• Online Network</b>: The ENACT Network is a national in-person and online
                    network of students, faculty, activists and legislators. It is a strategic and information hub for
                    state-level players that enables them to connect with counterparts throughout the country.</p>
                <br>
                <br>
            </div>
        </div>
        <div class='clear'></div>
    </div>
</section>

<!-- Public Resources Section -->
<section class='section diagonal-gradient'>
    <div class='section__content section__content--fluid-width section__content--padding' data-aos='fade-up'>
        <h2 class='section__title section__title--centered' style="color: white">Public resources</h2>
        <br><br><br>
        <% if (resourceInfo.length === 0) { %>
            <div class='card-body text-center' style="border-radius: 30px">
                <h4>No resource available yet</h4>
            </div>
        <% } %>
        <% for (let i = 0; i < resourceInfo.length && i < 3; i++) { %>
            <div class='card-body border-0' style='border-radius: 30px' data-aos='fade-up'>
                <h4>
                    <%= resourceInfo[i].name %>
                </h4>
                <div class='card-text'>
                    <ul class='list-group'>
                        <li class='list-group-item borderless box-padding'>
                            <b>Description: </b>
                            <%= resourceInfo[i].description %>
                        </li>
                        <li class='list-group-item borderless box-padding'>
                            <b>State:</b>
                            <%= resourceInfo[i].state %>
                        </li>
                        <li class='list-group-item borderless box-padding'>
                            <b>Link: </b>
                            <a href='<%= resourceInfo[i].uri %>'>Click me</a>
                        </li>
                        <li class='list-group-item borderless box-padding'>
                            <b>Institution: </b>
                            <%= resourceInfo[i].institution %>
                        </li>
                        <li class='list-group-item borderless box-padding'>
                            <b>Categories:</b>
                            <%= resourceInfo[i].tags %>
                        </li>
                    </ul>
                </div>
            </div>
            <br>
        <% } %>
        <br>
        <br>
        <% if (status === 'admin') { %>
            <div class='text-center' data-aos='fade-up' data-aos-delay="100">
                <a href='/resources/manage/public'><input type='button' name='submit'
                                                          class='btn btn- btn-lg btn-light'
                                                          value='Manage Displayed Resources'></a>
            </div>
        <% } %>
        <br>
        <div class='text-center' data-aos='fade-up' data-aos-delay="100">
            <a href='/resources/view/my/public/all'><input type='button' name='submit'
                                                           class='btn btn-lg btn-light'
                                                           value='Find More Resources'></a>
        </div>
        <br>
        <div class='clear'></div>
    </div>
</section>


<!-- Calendar -->
<section class='section section__grey'>
    <h2 class='section__title section__title--centered' style="padding-top: 80px">Events</h2>
    <section class='section__content section__content--fluid-width'>
        <% if (eventsInfo.length !== 0) { %>
            <% for (let i = 0; i < eventsInfo.length; i++) { %>
                <% if (loggedIn || eventsInfo[i].visibility === 'public') { %>
                    <div class='card border-0' style='border-radius: 30px'>
                        <div class='card-body'>
                            <h3><%= eventsInfo[i].title %></h3>
                            <div class='card-text' style="font-size: 17px">
                                <ul class='list-group'>
                                    <li class='list-group-item borderless box-padding'>
                                        <b>Description: </b> <%= eventsInfo[i].description %>
                                    </li>
                                    <% if (eventsInfo[i].start !== null) { %>
                                        <li class='list-group-item borderless box-padding'>
                                            <b>Starts at:</b>
                                            <%= eventsInfo[i].start %>
                                        </li>
                                    <% } %>
                                    <% if (eventsInfo[i].end !== null) { %>
                                        <li class='list-group-item borderless box-padding'>
                                            <b>Ends at:</b>
                                            <%= eventsInfo[i].end %>
                                        </li>
                                    <% } %>
                                    <% if (eventsInfo[i].uri !== null) { %>
                                        <li class='list-group-item borderless box-padding'>
                                            <b>Link: </b> <a
                                                    href="<%= eventsInfo[i].uri %>"><%= eventsInfo[i].uri %></a>
                                        </li>
                                    <% } %>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <% if (i !== eventsInfo.length - 1) { %>
                        <br>
                    <% } %>
                <% } %>
            <% } %>
        <% } else { %>
            <div class='card-body text-center' style="border-radius: 30px">
                <h4>No events available yet</h4>
            </div>
        <% } %>
        <br><br><br>
        <div class='text-center' data-aos='fade-up' style="padding-bottom: 80px" data-aos-delay="100">
            <a href='/events'><input type='button' name='submit'
                                     class='btn btn-lg btn-primary'
                                     value='View more events'></a>
        </div>
    </section>
</section>

<!-- Join Us Section -->
