<%- include('../components/header'); -%>
<%- include('../components/navbar'); -%>

<section class='section'>
    <div class='section__content section__content--full-width'>
        <div class='jumbotron masthead text-center'>
            <div class='section__title section__title--centered'>
                Advice & Tips for Students by Students
            </div>
        </div>
    </div>
</section>

<section class='section section__grey' data-aos='fade-up'>
    <section class='section__content section__content--fluid-width'>
        <div class='container'>
            <div class='row'>
                <!-- Check if there are any resources available -->
                <% if (resourceInfo && resourceInfo.length > 0) { %>
                    <div class='col-md-12 col-sm-12'>
                        <!-- Loop through each resource in the resourceInfo array -->
                        <% for (let i = 0; i < resourceInfo.length; i++) { %>
                            <div class='shadow-sm card-body' style="margin-bottom: 20px">
                                <h3><%= resourceInfo[i].name %></h3>
                                <div class='card-text'>
                                    <ul class='list-group'>
                                        <li class='list-group-item borderless box-padding bg-transparent' style='font-size: large'>
                                            <h5 style="display: inline">Description:</h5> <%= resourceInfo[i].description %>
                                        </li>
                                        <li class='list-group-item borderless box-padding bg-transparent' style='font-size: large'>
                                            <h5 style="display: inline">Year:</h5> <%= resourceInfo[i].yearOfCreation %>
                                        </li>
                                        <li class='list-group-item borderless box-padding bg-transparent' style='font-size: large'>
                                            <h5 style="display: inline">State:</h5> <%= resourceInfo[i].state %>
                                        </li>
                                        <% if (resourceInfo[i].mediaType === 'video') { %>
                                            <li class='list-group-item borderless box-padding bg-transparent' style='font-size: large'>
                                                <video style="width: 100%; max-width: 400px" controls>
                                                    <source src="<%= resourceInfo[i].uri %>" type="video/mp4">
                                                </video>
                                            </li>
                                        <% } else { %>
                                            <li class='list-group-item borderless box-padding bg-transparent' style='font-size: large'>
                                                <h5 style="display: inline">Link:</h5> <a href='<%= resourceInfo[i].uri %>'>click here</a>
                                            </li>
                                        <% } %>
                                        <li class='list-group-item borderless box-padding bg-transparent' style='font-size: large'>
                                            <h5 style="display: inline">Institution:</h5> <%= resourceInfo[i].institution %>
                                        </li>
                                        <li class='list-group-item borderless box-padding bg-transparent' style='font-size: large'>
                                            <h5 style="display: inline">Author:</h5> <%= resourceInfo[i].ownerName %>
                                        </li>
                                        <% if (resourceInfo[i].tags && resourceInfo[i].tags.length > 0) { %>
                                            <li class='list-group-item borderless box-padding bg-transparent' style='font-size: large'>
                                                <h5 style="display: inline">Tags:</h5> <%= resourceInfo[i].tags.join(", ") %>
                                            </li>
                                        <% } %>
                                    </ul>
                                </div>
                            </div>
                        <% } %>
                    </div>
                <% } else { %>
                    <!-- Show this if there are no resources -->
                    <div class='shadow-sm card-body text-center'>
                        No student guide resources available at this time.
                    </div>
                <% } %>
            </div>
        </div>
    </section>
</section>

<%- include('../components/footer'); -%>
